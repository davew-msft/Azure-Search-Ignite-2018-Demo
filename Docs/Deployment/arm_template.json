{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "funcAppName": {
            "type": "string"
        },
        "storageAcctName": {
            "type": "string"
        },
        "searchServiceName": {
            "type": "string"
        },
        "webAppName": {
            "type": "string"
        },
        "appInsightsName": {
            "type": "string"
        }
    },
    "variables": {
        "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', parameters('storageAcctName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Search/searchServices",
            "name": "[parameters('searchServiceName')]",
            "apiVersion": "2015-08-19",
            "location": "[parameters('location')]",
            "sku": {
                "name": "standard"
            },
            "properties": {
                "replicaCount": 3,
                "partitionCount": 3,
                "hostingMode": "default"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAcctName')]",
            "apiVersion": "2017-06-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[parameters('funcAppName')]",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('funcAppName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('funcAppName')]",
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('funcAppName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAcctName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('funcAppName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAcctName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAcctName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAcctName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(parameters('funcAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "name": "[parameters('appInsightsName')]",
            "apiVersion": "2014-04-01",
            "location": "[parameters('location')]",
            "properties": {
                "applicationId": "[parameters('appInsightsName')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "apiVersion": "2014-06-01",
            "dependsOn": [],
            "properties": {
                "name": "[parameters('webAppName')]",
                "sku": "Standard",
                "workerSize": "Small",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('webAppName'))]",
            ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('webAppName'))]"
            }
        }
    ]
}